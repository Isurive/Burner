{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "UserProfile",
  "description": "User profile extracted from resume",
  "properties": {
    "name": {
      "type": "string",
      "description": "Full name"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Email address"
    },
    "phone": {
      "type": "string",
      "description": "Phone number"
    },
    "experience": {
      "type": "array",
      "description": "Work experience",
      "items": {
        "type": "object",
        "properties": {
          "company": {"type": "string"},
          "role": {"type": "string"},
          "duration": {"type": "string"},
          "description": {"type": "string"}
        },
        "required": ["company", "role"]
      }
    },
    "education": {
      "type": "array",
      "description": "Education history",
      "items": {
        "type": "object",
        "properties": {
          "institution": {"type": "string"},
          "degree": {"type": "string"},
          "year": {"type": "string"}
        },
        "required": ["institution", "degree"]
      }
    },
    "skills": {
      "type": "array",
      "description": "List of skills",
      "items": {"type": "string"}
    }
  }
}
